{
  "name": "alfa-compiler",
  "version": "1.0.0",
  "description": "A Node.js compiler for ALFA (Abbreviated Language for Authorization) policy files",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "alfa-compiler": "./dist/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc -b src/tsconfig.json && tsc-alias -p src/tsconfig.json && fix-esm-import-path dist",
    "start": "npm run build && node dist/index.js",
    "test": "npm run build && vitest run",
    "test:debug": "npm run build && cross-env LOG_LEVEL=debug vitest run",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "global-install": "npm run build && npm pack && npm i -g alfa-compiler-1.0.0.tgz",
    "prepare": "husky"
  },
  "files": [
    "dist",
    "server/",
    "system.alfa",
    "standard-attributes.alfa",
    "README.md"
  ],
  "keywords": [
    "alfa",
    "authorization",
    "policy",
    "compiler",
    "authzforce",
    "xacml"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.21",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "fix-esm-import-path": "^1.10.3",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-types": "^3.17.5",
    "vscode-uri": "^3.1.0",
    "winston": "^3.18.3",
    "xml-formatter": "^3.6.7"
  }
}
